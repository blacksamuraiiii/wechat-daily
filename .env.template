# .env.template - 环境变量配置模板
# 复制此文件为 .env 并填入实际的配置值

# --- 企业微信配置 ---
# 企业微信应用配置，用于消息推送和接收
sToken = 'YOUR_S_TOKEN'  # 企业微信应用的Token
sEncodingAESKey = 'YOUR_ENCODING_AES_KEY'  # 企业微信应用的EncodingAESKey
WEIXIN_CORP_ID = "YOUR_CORP_ID"      # 你的企业ID
WEIXIN_CORP_SECRET = "YOUR_CORP_SECRET"   # 你的应用Secret
WEIXIN_AGENT_ID = YOUR_AGENT_ID                 # 你的应用AgentId (数字)
# 推送目标用户, "@all" 表示所有人, 或者指定成员 "User1|User2"
WEIXIN_TO_USER = "YOUR_USER_ID"

# --- LLM 服务配置 ---
# AI模型配置，支持OpenAI兼容的API
AI_API_KEY = "YOUR_API_KEY"  # 替换为你的 API Key
AI_BASE_URL = "https://api.openai.com/v1"  # API基础URL
AI_MODEL = "gpt-4"  # 使用的模型名称

# --- 邮箱配置 ---
# IMAP邮箱配置，用于邮件总结功能
IMAP_SERVER = "imap.your-email.com"  # IMAP服务器地址
IMAP_PORT = 993  # IMAP端口 (SSL通常为993)
USER_EMAIL = "your-email@example.com"  # 替换为你的邮箱
PASSWORD = "YOUR_EMAIL_PASSWORD"          # 替换为你的邮箱密码

# --- 天气推送配置 ---
# 天气和新闻推送相关配置
WEATHER_CITY_CODE = "101190601"  # 城市代码，默认扬州 (可通过weather.com.cn查询)
WEATHER_COOKIE = "YOUR_WEATHER_COOKIE"  # 天气API Cookie (从浏览器开发者工具获取)
NEWS_TYPE = "www_www_all_suda_suda"  # 新闻类型 (财经:finance_0_suda, 社会:news_society_suda等)

# --- 其他配置 ---
MAX_EMAILS_TO_SCAN = 200  # 邮件扫描上限，避免处理过多历史邮件